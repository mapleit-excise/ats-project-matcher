{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project-matcher/menu-ui": ["libs/menu/ui/src/index.ts"],
      "@project-matcher/model": ["libs/shared/model/src/index.ts"],
      "@project-matcher/project-data-access": [
        "libs/project/data-access/src/index.ts"
      ],
      "@project-matcher/project-feature": ["libs/project/feature/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
